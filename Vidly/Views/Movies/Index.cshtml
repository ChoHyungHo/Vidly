@model Vidly.ViewModels.MovieList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>

<table class="table table-bordered table-hover">
    <thead>
        <th>Movies</th>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            string className = movie.Customers.Count() > 3 ? "popular" : null;
            <tr>
                <td class="@className">
                    <a href="/Movies/MovieInfo?Id=@movie.Movie.Id">@movie.Movie.Name</a>
                </td>
            </tr>
        }
    </tbody>
</table>
